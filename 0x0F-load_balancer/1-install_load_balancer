#!/usr/bin/env bash
# Install and configure HAproxy on your lb-01 server.
apt-get -y update && apt-get -y install haproxy=1.6.\*
echo "backend web-backend
        balance roundrobin
        server 906-web-01 104.196.104.147:80 check
        server 906-web-02 34.73.38.83:80 check
      frontend http
        bind *:80
        mode http
        default_backend web-backend" >> /etc/haproxy/haproxy.cfg
service haproxy restart
